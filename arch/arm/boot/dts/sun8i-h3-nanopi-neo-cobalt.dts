
#include "sun8i-h3-nanopi-neo.dts"

&spi0 {
      rtspi@0 {
		compatible = "rtdm-spidev";
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <100000000>;
		status = "okay";
	};

      rtspi@1 {
		compatible = "rtdm-spidev";
		reg = <1>;
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <100000000>;
		status = "okay";
	};

      rtspi@2 {
		compatible = "rtdm-spidev";
		reg = <2>;
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <100000000>;
		status = "okay";
	};

      rtspi@3 {
		compatible = "rtdm-spidev";
		reg = <3>;
		#address-cells = <1>;
		#size-cells = <0>;
		spi-max-frequency = <100000000>;
		status = "okay";
	};
};
